<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/posts.css">
    <title>Document</title>
</head>

<body>

    <div class="header"></div>

    <section class="content" style="padding-top: 40px">
        <% if (posts.length > 0) { %>
            <% posts.forEach(post => { %>

                <a class="singlepost" href="/singlepost/<%= post.id %>">
                    <div class="header-section">
                        <div class="header-section-1">
                            <div class="site-logo">
                                <img class="header-image" src="" />
                                <!--  add user pic src     -->
                            </div>
                        </div>
                        <div class="header-section-2">
                            <time><%= post.datetime %></time>
                        </div>
                    </div>

                    <div class="middlepart">
                        <img :src="" width="100%" id="postImage" />
                        <h5>
                            <%= post.title %>
                        </h5>
                        <p>
                            <%= post.body %>
                        </p>
                    </div>

                    <div class="bottom-part">
                        <div class="post-like">
                            <img class="myimage" :src="require('@/assets/like1.png')" alt="like" />
                        </div>
                        <div class="nrOfLikes">
                            <p>0</p>
                        </div>
                    </div>
                </a>

                <% }) %>
                    <% } else { %>
                        <p>You did not post anything!</p>
                        <% } %>
    </section>

    <div class="footer"></div>
</body>

</html>