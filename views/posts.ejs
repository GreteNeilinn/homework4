<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/posts.css">
    <title>Document</title>
</head>

<body>

    <%- include('../partials/navbar.ejs') %>

        <section class="content" style="padding-top: 40px">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>

                    <article class="singlepost">
                        <div class="header-section">
                            <div class="header-section-1">
                                <div class="site-logo">
                                    <img class="header-image" src="images/usericon.png" />
                                    <!--  add user pic src     -->
                                </div>
                            </div>
                            <div class="header-section-2">
                                <time><%= post.datetime %></time>
                            </div>
                        </div>

                        <div class="middlepart">
                            <% if (post.image.length > 0) { %>
                                <img src="images/<%= post.image %>" width="100%" id="postImage" />
                                <% } else { %>
                                    <% } %>
                                        <h5>
                                            <%= post.title %>
                                        </h5>
                                        <% if (post.body.length > 0) { %>
                                            <p>
                                                <%= post.body %>
                                            </p>
                                            <% } else { %>
                                                <% } %>
                        </div>

                        <div class="bottom-part">
                            <div class="post-like">
                                <!-- data-id="<%= post.id %>" data-likes="<%= post.likes %>"  -->
                                <a class="likePost" data-id="<%= post.id %>" data-likes="<%= post.likes %>">
                                    <img class="myimage" src="images/like1.png" alt="like" />
                                </a>
                            </div>
                            <div class="nrOfLikes">
                                <p>
                                    <%= post.likes %>
                                </p>
                            </div>
                        </div>
                    </article>

                    <% }) %>
                        <% } else { %>
                            <p>You did not post anything!</p>
                            <% } %>
        </section>

        <%- include('../partials/footer.ejs') %>

            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script type="text/javascript">
                /*

                                                                                let putpost = document.querySelector('a.likePost');
                                                                            putpost.addEventListener('click', (e) => {
                                                                                const endpoint = `/posts/${putpost.dataset.id}/${putpost.dataset.likes}`;
                                                                                fetch(endpoint, {
                                                                                    method: 'PUT',
                                                                                }).then(window.Location.href = '/posts')
                                                                            });

                                                                                */
                $('.likePost').click(function() {
                    let id = $(this).data('id');
                    let likes = $(this).data('likes');
                    $.ajax({
                        type: 'PUT',
                        url: '/posts/' + id + '/' + likes,
                        success: function() {
                            window.Location.href = '/posts';
                        },
                    });
                });
            </script>
</body>

</html>